#usda 1.0
(
    "This file describes schemata for code generation for APIs relating to rendering, created by Adobe."
    subLayers = [
        @usd/schema.usda@
    ]
)

over "GLOBAL" (
    customData = {
        string libraryName      = "adobe_render"
        string libraryPath      = "adobe/usd_schemas/render"
        string libraryPrefix    = "AdobeRender"
    }
)
{
}

class "SettingsAPI"
(
    inherits = </APISchemaBase>
    doc = """AdobeRenderSettingsAPI encodes settings for Adobe's renderer which
    expand on the settings defined by UsdRenderSettingsAPI.
    """
    customData = {
        token apiSchemaType = "singleApply"

        # Auto-apply to usd's built-in RenderSettings, meaning no need to call ::Apply,
        # and no need to have the schema listed in the metadata of RenderSettings.
        # - HasAPI<AdobeRenderSettingsAPI>() will always be true.
        token[] apiSchemaAutoApplyTo = [ "RenderSettings" ]

        # its only valid to apply this API schema to usd's built-in RenderSettings
        token[] apiSchemaCanOnlyApplyTo = [ "RenderSettings" ]
    }
)
{
    token adobe:renderingTechnique = "rasterization" (
        doc = """
        Specifies the technique to used for rendering. "rasterization" uses a raster based
        algorithm. "cpuPathTracing" uses a pathtracing algorithm on the CPU. "gpuPathTracing"
        uses a pathtracing algorithm on the GPU.
        """

        allowedTokens = ["rasterization", "gpuPathTracing", "cpuPathTracing"]
        valueDisplayNames = {
            string rasterization = "Rasterization"
            string gpuPathTracing = "GPU Path Tracing"
            string cpuPathTracing = "CPU Path Tracing"
        }
        displayName = "Rendering Technique"
        keepValueOnReload = true
        uiOrder = 0

        customData = {
            string apiName = "renderingTechnique"
        }
    )

    bool adobe:backfaceCullingEnabled = false (
        doc = """
        A true value will enable the culling of triangle meshes that have normals that face away from
        the camera. A false value will disable backface culling.
        """

        displayName = "Backface Culling Enabled"
        uiOrder = 1

        customData = {
            string apiName = "backfaceCullingEnabled"
        }
    )

    bool adobe:displacementEnabled = true (
